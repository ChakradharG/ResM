{
  "name": "resm",
  "version": "2.0.1",
  "description": "An all in one Resource Manager",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChakradharG/ResM.git"
  },
  "author": "Chakradhar G",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ChakradharG/ResM/issues"
  },
  "homepage": "https://github.com/ChakradharG/ResM#readme",
  "dependencies": {
    "ejs": "^3.1.6",
    "ejs-electron": "^2.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "meow": "^10.1.1",
    "nugget": "^2.0.1",
    "pretty-bytes": "^5.6.0",
    "sqlite": "^4.0.21",
    "sqlite3": "git@github.com:mapbox/node-sqlite3.git#3fb3715c4e699ca3bc19e47b136758c66f61e477",
    "trim-newlines": "^4.0.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "^12.0.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./Assets/favicon.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "resm"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
